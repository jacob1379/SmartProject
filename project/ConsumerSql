DROP TABLE CONSUMER;

CREATE TABLE CONSUMER (
    C_ID VARCHAR2(10 CHAR) CONSTRAINT CONSUMER_PK_USERNAME PRIMARY KEY,
    C_PASSWORD VARCHAR2(60 CHAR),
    C_NICKNAME VARCHAR2(15 CHAR),
    C_NAME VARCHAR2(15 CHAR),
    C_BIRTHDAY DATE,
    C_JOINDAY DATE DEFAULT SYSDATE,
    C_PHONE VARCHAR2(15 CHAR),
    C_EMAIL VARCHAR2(30 CHAR),
    C_CHECKCODE VARCHAR2(20 CHAR),
    C_LOGIN_FAIL_COUNT NUMBER(1) DEFAULT 0,
    C_ENABLED NUMBER(1) DEFAULT 0,
    C_BUY_COUNT NUMBER(5) DEFAULT 0,
    C_BUY_MONEY NUMBER(10) DEFAULT 0,
    C_PROFILE VARCHAR2(50 CHAR),
    C_LEVEL VARCHAR2(10 CHAR)
);